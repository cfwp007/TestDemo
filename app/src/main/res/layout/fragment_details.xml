<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.LiveDataFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textSize="29sp"
        android:text="liveDataTest" />

    <TextView
        android:id="@+id/argstv"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1111111111111111" />

    <TextView
        android:id="@+id/detalesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1561470022"
        android:textColor="@color/colorPrimary"
      />


    <TextView
        android:id="@+id/mediatorlivedata"
        android:gravity="center"
        android:text="MediatorLiveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/refresh"
        android:text="点击刷新上方TextView值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:background="@android:color/darker_gray"
        android:textSize="29sp"
        android:text="Livedata高级协程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/flowDemo"
        android:gravity="center"
        android:text="MediatorLiveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>

